{
  "name": "ps-to-ad",
  "version": "1.0.0-beta",
  "description": "PS-to-AD Can be used to help sync data between your PowerSchool Instance and Active Directory",
  "main": "./src/main.js",
  "bin": {
    "ps-to-ad": "bin/ps2ad.js"
  },
  "engines": {
    "node": "^16.15.0",
    "npm": "^8.12.0",
    "powerschool": "^22.5.1.1.0"
  },
  "os": [
    "win32",
    "linux"
  ],
  "scripts": {
    "start": "node bin/ps2ad.js",
    "lint": "prettier --check -u -w .",
    "js-docs": "jsdoc2md ./src/*.js ./src/integrations/*.js > ./docs/Source_Documentation.md",
    "eslint": "npx eslint . --fix-dry-run"
  },
  "author": "confused-Techie",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.2",
    "js-yaml": "^4.1.0",
    "log-utils": "^1.0.0",
    "nodemailer": "^6.9.1",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-plugin-node": "^11.1.0",
    "jsdoc-to-markdown": "^8.0.0",
    "prettier": "^2.8.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "extends": [
      "eslint:all",
      "plugin:node/recommended"
    ],
    "plugins": [
      "node"
    ],
    "rules": {
      "no-console": 0,
      "no-process-exit": 0,
      "camelcase": 1,
      "no-ternary": 0,
      "max-len": [
        "error",
        110
      ],
      "strict": 0,
      "sort-keys": 0,
      "max-lines": 0,
      "max-lines-per-function": 0,
      "max-statements": 0
    },
    "globals": {}
  }
}
